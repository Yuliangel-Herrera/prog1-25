@model List<Model.Customer>

<a asp-action="Create" asp-controller="Customer" class="btn btn-light">
    Novo Customer
</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (Model.Customer customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Customer"
                           asp-route-id="@customer.Id"
                            title="Excluir Customer @customer.Name">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>

                        <a asp-action="Update" asp-controller="Customer"
                           asp-route-id="@customer.Id"
                           title="Editar @customer.Name">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Customer
    </div>
}

<a asp-action="ExportDelimitatedFile" asp-controller="Customer" class="btn btn-light">
    Exportar Dados
</a>

<a asp-action="ExportFixedFile" asp-controller="Customer" class="btn btn-light">
    Exportar Fixo
</a>