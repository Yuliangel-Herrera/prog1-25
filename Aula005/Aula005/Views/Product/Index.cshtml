@model List<Model.Product>

<a asp-action="Create" asp-controller="Product" class="btn btn-light">
    Novo Produto
</a>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Model.Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Produto
    </div>
}

<a asp-action="ExportDelimitatedFile" asp-controller="Product" class="btn btn-light">
    Exportar Dados
</a>